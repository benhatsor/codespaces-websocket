{
	"name": "Codespaces and Websockets",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": { "VARIANT": "3" }
	},

	"extensions": [
		"ms-python.python"
	],

	"portsAttributes": {
		"3000": {
			"label": "Webserver",
			"onAutoForward": "notify"
		}
	},

	"postCreateCommand": "pip3 install -r requirements.txt && python server.py",
	"remoteUser": "vscode"
}
